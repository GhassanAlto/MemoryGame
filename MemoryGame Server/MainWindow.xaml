<Window x:Class="MemoryGameServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGameServerWPF"
        Title="WebSocket Server" Height="400" Width="600">

    <Grid Margin="10">
        <!-- Eingabefeld für Anzahl der Spieler -->
        <TextBlock Text="Wähle Anzahl der Spieler:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <!--<TextBox x:Name="PlayerCountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="150,10,0,0"/>-->
        <ComboBox x:Name="PlayerCountComboBox" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="180,10,0,0">
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
        </ComboBox>

        <Label x:Name="InfoLabel" VerticalAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"/>
        <!-- Eingabefeld für Anzahl der Karten -->
        <TextBlock Text="Wähle Anzahl der Karten:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <!--<TextBox x:Name="CardCountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="150,40,0,0"/>-->
        <ComboBox x:Name="CardCountComboBox"  Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="180,40,0,0">
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="12" />
            <ComboBoxItem Content="18" />
            <ComboBoxItem Content="24" />
            <ComboBoxItem Content="30" />
        </ComboBox>
        <!-- Start Button -->
        <Button x:Name="StartButton" Content="Start Server" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10,0,0,10" Click="StartButton_Click"/>

        <!-- Stop Button -->
        <Button x:Name="StopButton" Content="Stop Server" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,10,10" IsEnabled="False" Click="StopButton_Click"/>

        <!-- Log TextBox -->
        <TextBox x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,80,10,50" AcceptsReturn="True" VerticalAlignment="Top"/>
    </Grid>
</Window>
