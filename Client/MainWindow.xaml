<Window x:Class="MemoryGame.Client.MainWindow"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
      Height="900" Width="1000"   Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid x:Name="StartSite" Visibility="Hidden" Margin="50,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Label Content="MemoryGame" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" Foreground="#6495ed" />

            <TextBlock x:Name="StatusTextBlock" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" Foreground="Red"/>
            <TextBlock x:Name="StatusTextBlock2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="18" Foreground="DeepPink"/>

            <Grid Grid.Row="2" x:Name="EingabeField">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Content="Enter your Name" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="#6495ed" />
                <TextBox x:Name="PlayerNameTextBox"  Width="300" Height="50" HorizontalAlignment="Center" Margin="0,10"  FontSize="26" HorizontalContentAlignment="Center" Foreground="Brown"
                         VerticalContentAlignment="Center" Background="#f0f0f0" BorderBrush="#888888" BorderThickness="2" Padding="5" VerticalAlignment="Bottom"/>

                <Label x:Name="ServerLabel" Content="Enter Server-IP" Grid.Row="1" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="#6495ed"
                       ToolTip="Server-IP ist 127.0.0.1, wenn Client und Server auf demselben Rechner ausgeführt werden."/>
                
                <TextBox x:Name="ServerIPBox" Text="127.0.0.1" Grid.Row="1"  Width="300" Height="50" HorizontalAlignment="Center" Margin="0,10"   FontSize="26" 
          VerticalContentAlignment="Center" Background="#f0f0f0" BorderBrush="#888888" BorderThickness="2" Padding="5" Foreground="Brown" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>

                <Button x:Name="ConnectButton" Grid.Row="2" Content="Connect" Width="250" Height="40" HorizontalAlignment="Center" Margin="0,20"   
                        FontSize="16" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="2" Click="HandleConnectButtonClicked" />
            </Grid>

            
            

        </Grid>

        <Grid x:Name="GameBoard" Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <!-- Schwarz (deckt 80% des Bereichs) -->
                    <GradientStop Color="#FF003EFD" Offset="0.15" />
                    <GradientStop Color="#FF11EC0A" Offset="0.85" />

                    <!-- Farbverlauf nach links von der Mitte (Schwarz) -->
                    <GradientStop Color="#FF003EFD" Offset="0" />
                    <!-- Rot (links) -->

                    <!-- Farbverlauf nach rechts von der Mitte (Schwarz) -->
                    <GradientStop Color="#FF11EC0A" Offset="1" />
                    <!-- Grüngelb (rechts) -->
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="ErfolgsLabel" FontSize="20" Foreground="Gold" Margin="10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="CurrentPlayerLabel" Grid.Row="1" FontSize="24" FontWeight="Bold" Margin="10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <UniformGrid Grid.Column="1" Columns="6" x:Name="UniFormGrid_Table"/>
            </Grid>

            <Grid x:Name="MainGrid" Grid.Row="2" Margin="5,10"/>

            <Grid Grid.Row="3" Margin="20,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <RichTextBox Name="ChatBox" IsReadOnly="True" AcceptsReturn="True"  VerticalScrollBarVisibility="Auto"  
                                 Foreground="Black" FontSize="22" Background="{x:Null}" BorderBrush="{x:Null}"/>

                </Grid>

                <Grid Grid.Row="1">

                    <RichTextBox Name="MessageTextBox" PreviewKeyDown="MessageTextBox_PreviewKeyDown"   VerticalScrollBarVisibility="Auto"  
                                 FontSize="22" VerticalContentAlignment="Center"  BorderBrush="{x:Null}"/>
                    <Button Name="SendButton" Content="Senden"  Click="SendButton_Click" HorizontalAlignment="Right" FontSize="26"  
                            Background="#FF11EC0A" Padding="5,0" BorderBrush="{x:Null}"/>
                    <!-- Smiley-Button -->
                    <Button Name="EmojiButton"    Click="EmojiButton_Click"   Width="50" HorizontalAlignment="Right" 
                            Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,98,0">
                        <Button.Content>
                            <Image Source="Images/vielerfolg.png"/>
                        </Button.Content>
                    </Button>

                    <!-- Popup für Emojis -->
                    <Popup Name="EmojiPopup" Placement="MousePoint" StaysOpen="False" IsOpen="False" Width="250">
                        <Border BorderBrush="Gold" BorderThickness="1" CornerRadius="45">
                            <UniformGrid Name="EmojiUniformGrid" Columns="5"/>
                        </Border>
                    </Popup> 
                
                </Grid>
            </Grid>
        </Grid>

    </Grid>

</Window>
