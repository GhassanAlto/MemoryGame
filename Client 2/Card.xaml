<UserControl x:Class="MemoryGame.Client.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Client"
             mc:Ignorable="d" Name="UserControl" Margin="1">
    <!-- Ressourcen: Definiert zwei Storyboard-Animationen für den Flip-Effekt -->
    <UserControl.Resources>

        <!-- Storyboard für das erste Flip-Animation (zeigt die Rückseite an) -->
        <Storyboard x:Key="FlipFirst">
            <!-- Steuert die Sichtbarkeit der Rückseite (Back) -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Back" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Skalierung (ScaleX) für die Rückseite (Back), für horizontale Spiegelung -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Back" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0" Value="-1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Steuert die Sichtbarkeit der Vorderseite (Front) -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Front" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Skalierung (ScaleX) für die Vorderseite (Front), für horizontale Spiegelung -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Front" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Storyboard für das letzte Flip-Animation (zeigt die Vorderseite an) -->
        <Storyboard x:Key="FlipLast">
            <!-- Steuert die Sichtbarkeit der Rückseite (Back) beim Verstecken -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Back" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Skalierung (ScaleX) für die Rückseite (Back), für horizontale Spiegelung beim Verstecken -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Back" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="-1" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Steuert die Sichtbarkeit der Vorderseite (Front) beim Anzeigen -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Front" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <!-- Skalierung (ScaleX) für die Vorderseite (Front), für horizontale Spiegelung beim Anzeigen -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Front" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="0" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <!-- Hauptgrid des UserControls -->
    <Grid>
        <!-- Ressourcen: Stil für die Sichtbarkeit des Grids bei Opazität 0 -->
        <Grid.Resources>
            <Style TargetType="Grid">
                <Setter Property="IsHitTestVisible" Value="True" />
                <Style.Triggers>
                    <Trigger Property="Opacity" Value="0">
                        <Setter Property="IsHitTestVisible" Value="False" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <!-- Rückseite (Back) des Controls -->
        <Grid x:Name="Back"
              Opacity="0"
              RenderTransformOrigin="0.5,0.5">
            <!-- TransformGroup für verschiedene Transformationen auf der Rückseite -->
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Grid.RenderTransform>
            <!-- Zeigt den Inhalt der Rückseite an, der an `BackContent` gebunden ist -->
            <ContentControl Content="{Binding BackContent, ElementName=UserControl}" />

            <!-- DockPanel mit einem Pfeilsymbol für die Rückseite -->
            <DockPanel Margin="0,3,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       MouseDown="ButtonBase_OnClick">
                <!-- Stil für DockPanel, um die Opazität bei MouseOver zu ändern -->
                <DockPanel.Style>
                    <Style TargetType="DockPanel">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>
            </DockPanel>
        </Grid>

        <!-- Vorderseite (Front) des Controls -->
        <Grid x:Name="Front" RenderTransformOrigin="0.5,0.5">
            <!-- TransformGroup für Transformationen auf der Vorderseite -->
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Grid.RenderTransform>
            <!-- Zeigt den Inhalt der Vorderseite an, der an `FrontContent` gebunden ist -->
            <ContentControl Content="{Binding FrontContent, ElementName=UserControl}" />
        </Grid>
    </Grid>
</UserControl>